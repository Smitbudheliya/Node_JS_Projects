<%- include('../header') %>

<div class="page-wrapper d-flex flex-column min-vh-100 bg-light py-5">
  <div class="container flex-grow-1">
    <h2 class="text-center mb-5 fw-bold">✨ All Blogs ✨</h2>
    
    <div class="row g-4">
      <% data.map((blog) => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card blog-card h-100 shadow-sm border-0">
            
            <!-- Blog Image -->
            <img src="<%= blog.image %>" class="card-img-top blog-img" alt="Blog Image">

            <!-- Blog Content -->
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold text-dark mb-3">
                <%= blog.title %>
              </h5>
              <p class="card-text text-muted mb-4">
                <%= blog.description.substring(0, 120) %>...
              </p>
              <a href="/webpage/readMore/<%= blog._id %>" class="btn btn-read mt-auto">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<style>
  /* Simple Card */
  .blog-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }

  /* Blog Image */
  .blog-img {
    height: 220px;
    object-fit: cover;
  }

  /* Read More Button */
  .btn-read {
    background: #007bff;
    color: #fff;
    border-radius: 30px;
    padding: 0.4rem 1rem;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  .btn-read:hover {
    background: #0056b3;
    color: #fff;
  }

  @media(max-width: 768px){
    .blog-img {
      height: 200px;
    }
  }
</style>

<%- include('../footer') %>
